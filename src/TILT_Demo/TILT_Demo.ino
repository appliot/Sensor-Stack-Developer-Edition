void setup() {
  Serial.begin(115200);

  pinMode(Tilt_Pin, INPUT);

  display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR);
  display.clearDisplay();

}

void loop() {
  Tilt_data = digitalRead(Tilt_Pin);
  display.setTextSize(1);
  display.setTextColor(WHITE);
  if (Tilt_data == 1)
  {
    Tilt_String = "ON";
    display.drawBitmap(85, 10,  tilt_icon2 , 27, 19, WHITE);
    display.display();

  }
  else
  {
    Tilt_String = "OFF";
    display.drawBitmap(85, 10,  tilt_icon2_mirror , 27, 19, WHITE);
    display.display();
  }

  Serial.print("Tilt Switch: ");
  Serial.print(Tilt_data);

  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(42, 0);
  display.print("TILT  ");
  display.setCursor(40, 15);
  display.print(Tilt_String);
